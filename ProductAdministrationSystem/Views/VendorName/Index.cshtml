@model IEnumerable<PAS.Models.VendorName>

@{
    ViewBag.Title = "Vendor Name Index";
}

<div class="heading">
    <h1>
        Vendor Name Index
        @if (Request.Url.AbsolutePath.Contains("ArchivedIndex"))
        {
            <div class="heading-info">@Html.ActionLink("View Active Vendor Names", "Index")</div>
        }
        else
        {
            <div class="heading-info">@Html.ActionLink("View Archived Vendor Names", "ArchivedIndex")</div>
        }
        <div class="heading-info">@Html.ActionLink("Create New Vendor Name", "Create")</div>
    </h1>
</div>
<div class="flex-grid">
    <section>
        <table datatable="">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.VendorNameName)</th>
                    <th>Modify</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.VendorNameName)
                        </td>
                        <td class="action-icons">
                            <ul>
                                <li>
                                    <a class="edit-btn" href="@Url.Action("Edit", new { id = item.VendorNameID })"><i class="fa fa-pencil-square-o"></i></a><md-tooltip>Edit</md-tooltip>
                                </li>
                                <li>
                                    <a class="archive-btn" href="@Url.Action("Archive", new { id = item.VendorNameID })"><i class="fa fa-archive"></i></a><md-tooltip>Archive</md-tooltip>
                                </li>
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>
