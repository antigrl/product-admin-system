@model IEnumerable<PAS.Models.Campaign>
@using PAS.Models;
@using PAS.Helpers;

@if (Model.Any() && Model != null)
{
    <table datatable="">
        <thead>
            <tr>
                <th>Campaign Name</th>
                <th>Status</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td class="campaign-name">
                    @Html.DisplayFor(model => item.CampaignName)
                </td>
                <td class="status">
                    @Html.DisplayFor(model => item.CampaignStatus)
                </td>
                <td>
                    @Html.DisplayFor(model => item.CampaignCreatedOnDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Campaign", new { ReturnUrl = Url.Action("Index", "Home"), id = item.CampaignID }, null)
                    @Html.ActionLink("Archive", "Archive", "Campaign", new { ReturnUrl = Url.Action("Index", "Home"), id = item.CampaignID }, null)
                </td>
            </tr>
        }
    </tbody>
</table>
}
