@model PAS.Models.Campaign
@using PAS.Helpers;

@{
    ViewBag.Title = "Archive Campaign";
}
<div class="heading">
    <h1>Archive Campaign</h1>
</div>

<div class="flex-grid">
    <section class="info-list">
        <h2>Are you sure you want to archive this Campaign?</h2>

        @Html.HiddenFor(model => model.CampaignStatus, new { Value = "Disabled" })

        <div class="controls">
            <strong>@Html.DisplayNameFor(model => model.CampaignName)</strong><br>
            @Html.DisplayFor(model => model.CampaignName)
        </div>

        <div class="controls">
            <strong>@Html.DisplayNameFor(model => model.Company.CompanyName)</strong><br>
            @Html.DisplayFor(model => model.Company.CompanyName)
        </div>

        <div class="controls">
            <strong>@Html.DisplayNameFor(model => model.CampaignReason)</strong><br>
            @Html.DisplayFor(model => model.CampaignReason)
        </div>

        <div class="controls">
            <strong>@Html.DisplayNameFor(model => model.CampaignProductCount)</strong><br>
            @Html.DisplayFor(model => model.CampaignProductCount)
        </div>

        <div class="controls">
            <strong>@Html.DisplayNameFor(model => model.CampaignAccountManagerComments)</strong><br>
            @Html.DisplayFor(model => model.CampaignAccountManagerComments)
        </div>

        <div class="controls">
            <strong>@Html.DisplayNameFor(model => model.CampaignMerchandiserComments)</strong><br>
            @Html.DisplayFor(model => model.CampaignMerchandiserComments)
        </div>

        <div class="controls">
            <strong>@Html.DisplayNameFor(model => model.CampaignInventoryBuyerComments)</strong><br>
            @Html.DisplayFor(model => model.CampaignInventoryBuyerComments)
        </div>

        <div class="controls">
            <strong>@Html.DisplayNameFor(model => model.CampaignMentorComments)</strong><br>
            @Html.DisplayFor(model => model.CampaignMentorComments)
        </div>

        <div class="controls">
            <strong>@Html.DisplayNameFor(model => model.CampaignStatus)</strong><br>
            @Html.DisplayFor(model => model.CampaignStatus)
        </div>

        <div class="controls">
            <strong>@Html.DisplayNameFor(model => model.CampaignCreatedBy)</strong><br>
            @MyExtensions.DisplayPrintFriendlyName(Model.CampaignCreatedBy)
        </div>

        <div class="controls">
            <strong>@Html.DisplayNameFor(model => model.CampaignCreatedOnDate)</strong><br>
            @Html.DisplayFor(model => model.CampaignCreatedOnDate)
        </div>

        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            <p>
                <input type="submit" class="button green" value="Archive" />
                |
                @Html.ActionLink("Back to List", "Index")
            </p>
        }
    </section>
</div>
