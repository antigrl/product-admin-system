@model PAS.Models.Product

@{
    ViewBag.Title = "Edit Product";
}
<div class="heading">
    <h1>
        @Html.DisplayFor(model => model.Campaign.Company.CompanyName)
        <div class="heading-info">
            <strong>@ViewBag.Title</strong> @Html.DisplayFor(model => model.ProductID)
        </div>
        <div class="heading-info">
            <a href="@Url.Action("Edit", "Campaign", new {id=Model.CampaignID})">
                <strong>Campaign</strong> @Html.DisplayFor(model => model.Campaign.CampaignName)
            </a>
        </div>
    </h1>
</div>

@using (Html.BeginForm("Close", "Product", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)
    @Html.HiddenFor(model => model.ProductID)
    @Html.Partial("_EditorData")

    <button type="submit" class="button green" formaction="@Url.Action("SaveAndClose", new { id = Model.ProductID, ReturnUrl = ViewBag.ReturnUrl })">Save &amp; Close</button>
    <input type="submit" class="button" value="Cancel" />
}