@model IEnumerable<PAS.Models.ProductDecoration>

@{
    ViewBag.Title = "Product Decoration Index";
}
<div class="heading">
    <h1>@ViewBag.TitleMessage Product Decoration Index
        @if(Request.Url.AbsolutePath.Contains("ArchivedIndex"))
        {
            <span class="heading-info">@Html.ActionLink("View Active", "Index")</span>
        }
        else
        {
            <span class="heading-info">@Html.ActionLink("View Archived", "ArchivedIndex")</span>
        }
        <div class="heading-info">@Html.ActionLink("Create New", "Create")</div>
    </h1>
</div>
<div class="flex-grid">
    <section>
        <table datatable="" ng-cloak>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DecorationName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DecorationColor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DecorationLocation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DecorationSize)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DecorationVendor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product.ProductName)
                    </th>
                    <th>Modify</th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DecorationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecorationColor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecorationLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecorationSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecorationVendor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                </td>
                <td class="action-icons">
                    <ul>
                        <li>
                            <a class="edit-btn" href="@Url.Action("Edit", new { id=item.DecorationID })"><i class="fa fa-pencil-square-o"></i></a><md-tooltip>Edit</md-tooltip>
                        </li>
                        <li>
                            <a class="archive-btn" href="@Url.Action("Archive", new { id=item.DecorationID })"><i class="fa fa-archive"></i></a><md-tooltip>Archive</md-tooltip>
                        </li>
                    </ul>
                </td>
            </tr>
        }
            </tbody>
        </table>
    </section>
</div>