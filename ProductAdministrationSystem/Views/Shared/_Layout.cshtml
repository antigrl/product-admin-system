﻿<!DOCTYPE html>
<html lang="en" ng-app="nprApp">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - NPR</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/bower_components/angular-material/angular-material.css">
    @Styles.Render("~/Content/css")
    @using PAS.Helpers;
    <script type='text/javascript'>
        (function (d, t) {
            var bh = d.createElement(t), s = d.getElementsByTagName(t)[0];
            bh.type = 'text/javascript';
            bh.src = '//www.bugherd.com/sidebarv2.js?apikey=0napvmewib36altnynfnmw';
            s.parentNode.insertBefore(bh, s);
        })(document, 'script');
    </script>
</head>
<body ng-controller="AppCtrl">
    <nav class="collapsed main">
        <a class="open"></a>
        <div>
            <header>
                <a></a>
                <img src="@Url.Content("~/Content/themes/base/images/logo.png")" class="thumb">
                <span>@MyExtensions.DisplayPrintFriendlyName(User.Identity.Name)</span>
            </header>
        </div>
        <ul>
            <li class="section"><span>Navigation</span></li>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Add New Company", "Create", "Company", new { ReturnUrl = Url.Action("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }) }, null)</li>
            <li>@Html.ActionLink("Vendor List", "Index", "VendorName")</li>
            <li>@Html.ActionLink("Fee List", "Index", "FeeName")</li>
            @if (User.Identity.Name.ToLower().Contains("john.grabanski") ||
                    User.Identity.Name.ToLower().Contains("rhonda.viviano") ||
                    User.Identity.Name.ToLower().Contains("reid.binns") ||
                    User.Identity.Name.ToLower().Contains("susan.kowelman") ||
                    User.Identity.Name.ToLower().Contains("kim.walta"))
            {
                <li>@Html.ActionLink("Admin Links", "AdminLinks", "Home")</li>
            }
        </ul>
    </nav>
    <main class="collapsed" ng-controller="ScrollCtrl">
        <div id="body">
            <a id="top"></a>
            @RenderSection("featured", required: false)
            @RenderBody()
        </div>
        <a class="scroll-up" ng-click="gotoTop()"></a>
    </main>
    @Scripts.Render("~/bundles/npr")
    @RenderSection("scripts", required: false)
</body>
</html>
