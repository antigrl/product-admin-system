@model IEnumerable<PAS.Models.FeeName>
@using PAS.Helpers;
@using PAS.Models;

@{
    ViewBag.Title = "Fee Index";
}

<div class="heading">
    <h1>
        Fee Index

        @if (Request.Url.AbsolutePath.Contains("ArchivedIndex"))
        {
            <div class="heading-info">@Html.ActionLink("Active Fees", "Index")</div>
        }
        else
        {
            <div class="heading-info">@Html.ActionLink("Archived Fees", "ArchivedIndex")</div>
        }
        <div class="heading-info">@Html.ActionLink("Create New Fee Name", "Create")</div>
    </h1>

</div>
<div class="flex-grid">
    <section>
        <table datatable="">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FeeNameName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FeeNameType)
                    </th>
                    <th>Modify</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FeeNameName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FeeNameType)
                        </td>
                        <td class="action-icons">
                            <ul>
                                <li>
                                    <a class="edit-btn" href="@Url.Action("Edit", new { id = item.FeeNameID })"><i class="fa fa-pencil-square-o"></i></a><md-tooltip>Edit</md-tooltip>
                                </li>
                                <li>
                                    <a class="archive-btn" href="@Url.Action("Archive", new { id = item.FeeNameID })"><i class="fa fa-archive"></i></a><md-tooltip>Archive</md-tooltip>
                                </li>
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>
