@model IEnumerable<PAS.Models.Company>

@{
    ViewBag.Title = "Company Index";
}
<div class="heading">
    <h1>
        @ViewBag.TitleMessage Company Index

        @if (Request.Url.AbsolutePath.Contains("ArchivedIndex"))
        {
            <div class="heading-info">@Html.ActionLink("View Active Companies", "Index")</div>
        }
        else
        {
            <div class="heading-info">@Html.ActionLink("View Archived Companies", "ArchivedIndex")</div>
        }
        <div class="heading-info">@Html.ActionLink("Create New Company", "Create", "Company", new object { }, null)</div>
    </h1>
</div>
<div class="flex-grid">
    <section>
        <table class="index-table company-table" datatable="">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyDivisionNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyContactName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyAccountManagerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyMentorName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyStatus)
                    </th>
                    <th>Modify</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyDivisionNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyContactName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyAccountManagerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyMentorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyStatus)
                        </td>
                        <td class="action-icons">
                            <ul>
                                <li>
                                    <a class="edit-btn" href="@Url.Action("Edit", new { id = item.CompanyID })"><i class="fa fa-pencil-square-o"></i></a><md-tooltip>Edit</md-tooltip>
                                </li>
                                @* TODO: Add Archive for admins*@
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>
