@model IEnumerable<PAS.Models.PackagingType>

@{
    ViewBag.Title = "Packaging Type Index";
}


<div class="heading">
    <h1>
    Packaging Type Index
        @if(Request.Url.AbsolutePath.Contains("ArchivedIndex"))
        {
            <span class="heading-info">@Html.ActionLink("View Active", "Index")</span>
        }
        else
        {
            <span class="heading-info">@Html.ActionLink("View Archived", "ArchivedIndex")</span>
        }
        <div class="heading-info">@Html.ActionLink("Create New", "Create")</div>
    </h1>
</div>
<div class="flex-grid">
<section>
    <table datatable="">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PackagingTypeName)
            </th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PackagingTypeName)
                </td>
                <td class="action-icons">
                    <ul>
                        <li>
                            <a class="edit-btn" href="@Url.Action("Edit", new { id = item.PackagingTypeID })"><i class="fa fa-pencil-square-o"></i></a><md-tooltip>Edit</md-tooltip>
                        </li>
                        <li>
                            <a class="archive-btn" href="@Url.Action("Archive", new { id = item.PackagingTypeID })"><i class="fa fa-archive"></i></a><md-tooltip>Archive</md-tooltip>
                        </li>
                </td>
            </tr>
        }
        </tbody>
    </table>
    </section>
</div>
