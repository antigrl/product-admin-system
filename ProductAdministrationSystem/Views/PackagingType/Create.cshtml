@model PAS.Models.PackagingType

@{
    ViewBag.Title = "Create Packaging Type";
}

<div class="heading">
    <h1>Create Packaging Type</h1>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="flex-grid">
        <section>
            @Html.HiddenFor(model => model.PackagingTypeStatus)
            <div class="controls">
                @Html.LabelFor(model => model.PackagingTypeName)
                @Html.EditorFor(model => model.PackagingTypeName)
                @Html.ValidationMessageFor(model => model.PackagingTypeName)
            </div>
        </section>
    </div>
    <input type="submit" class="button green" value="Create" />
    <a class="button" href="@Url.Action("Index")">Back</a>
}