@model PAS.Models.ProductUpcharge
@using PAS.Models
@using PAS.Helpers

@{
    ViewBag.Title = "Create Product Upcharge";
}
<div class="heading">
    <h1>Create Product Upcharge</h1>
</div>
@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="flex-grid">
        <section>
        @Html.HiddenFor(model => model.UpchargeStatus)

        <div class="controls">
            @Html.LabelForRequired(model => model.UpchargeName)
            @Html.DropDownListFor(model => model.UpchargeName, MyExtensions.GetGenericEnumDropDown<ProductUpchargeNames>(), "")
            @Html.ValidationMessageFor(model => model.UpchargeName)
        </div>

        <div class="controls">
            @Html.LabelForRequired(model => model.UpchargeAmount)
            @Html.EditorFor(model => model.UpchargeAmount)
            @Html.ValidationMessageFor(model => model.UpchargeAmount)
        </div>

        <div class="controls">
            @Html.LabelForRequired(model => model.ProductID, "Product")
            @Html.DropDownList("ProductID", String.Empty)
            @Html.ValidationMessageFor(model => model.ProductID)
        </div>

        </section>
    </div>

    <input type="submit" class="button green" value="Create" />

    <a class="button" href="@Url.Action("Back", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, null)">Back</a>
}

@section Scripts {
}
