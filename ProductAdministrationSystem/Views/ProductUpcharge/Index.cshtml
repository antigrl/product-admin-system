@model IEnumerable<PAS.Models.ProductUpcharge>

@{
    ViewBag.Title = "Product Upcharge Index";
}

<div class="heading">
    <h1>@ViewBag.TitleMessage Product Upcharge Index
        @if(Request.Url.AbsolutePath.Contains("ArchivedIndex"))
        {
            <span class="heading-info">@Html.ActionLink("View Active", "Index")</span>
        }
        else
        {
            <span class="heading-info">@Html.ActionLink("View Archived", "ArchivedIndex")</span>
        }
        <div class="heading-info">@Html.ActionLink("Create New", "Create")</div>
    </h1>
</div>
<div class="flex-grid">
    <section>
        <table datatable="">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UpchargeID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpchargeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpchargeAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpchargeTotalCost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product.ProductName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpchargeID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpchargeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpchargeAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpchargeTotalCost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.ProductName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.UpchargeID }) |
                            @Html.ActionLink("Archive", "Archive", new { id = item.UpchargeID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>