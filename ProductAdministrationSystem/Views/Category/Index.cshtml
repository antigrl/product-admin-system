@model IEnumerable<PAS.Models.Category>

@{
ViewBag.Title = "Category Index";
}



<div class="heading">
  <h1>
  Category Index
    @if (Request.Url.AbsolutePath.Contains("ArchivedIndex"))
    {
    <span class="heading-info">@Html.ActionLink("View Active", "Index")</span>
    }
    else
    {
    <span class="heading-info">@Html.ActionLink("View Archived", "ArchivedIndex")</span>
    }
    <div class="heading-info">@Html.ActionLink("Create New", "Create")</div>
  </h1>
</div>
<div class="flex-grid">
  <section>
  <table datatable="">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.CategoryName)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.CategoryType)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.CategoryType)
        </td>
        <td>
          @Html.ActionLink("edit", "edit", new { id = item.CategoryID }) |
          @Html.ActionLink("Archive", "Archive", new { id = item.CategoryID })
        </td>
      </tr>
    }
    </tbody>
    </table>
  </section>
</div>
