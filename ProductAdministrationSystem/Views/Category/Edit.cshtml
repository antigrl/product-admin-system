@model PASModels.Category
@using PAS.Helpers;
@using PASModels;

@{
    ViewBag.Title = "Edit Category";
}

<h2>Edit Category</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset class="left-half-content">
        <legend>Category</legend>

        @Html.HiddenFor(model => model.CategoryID)
        @Html.HiddenFor(model => model.CategoryStatus)

        <div class="editor-label">
            @Html.LabelForRequired(model => model.CategoryName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryName)
            @Html.ValidationMessageFor(model => model.CategoryName)
        </div>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.CategoryType)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CategoryType, MyExtensions.GetGenericEnumDropDown<CategoryTypeList>(), "")
            @Html.ValidationMessageFor(model => model.CategoryType)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
        <div>
            @Html.ActionLink("Back to Category List", "Index")
        </div>
    </fieldset>
}

@section Scripts {
}
