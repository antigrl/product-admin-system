@model PAS.Models.DecorationMethod
@using PAS.Helpers;

@{
    ViewBag.Title = "Create Decoration Method";
}

<div class="heading">
    <h1>Create Decoration Method</h1>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="flex-grid">
        <section>
            @Html.HiddenFor(model => model.DecorationMethodStatus)
            <div class="controls">
                @Html.LabelForRequired(model => model.DecorationMethodName)
                @Html.EditorFor(model => model.DecorationMethodName)
                @Html.ValidationMessageFor(model => model.DecorationMethodName)
            </div>
        </section>
    </div>
    <input type="submit" class="button green" value="Create" />
    <a class="button" href="@Url.Action("Index")">Back</a>
}