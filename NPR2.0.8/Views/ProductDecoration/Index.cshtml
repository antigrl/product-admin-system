@model IEnumerable<NPRModels.ProductDecoration>

@{
    ViewBag.Title = "Product Decoration Index";
}

<h2>@ViewBag.TitleMessage Product Decoration Index</h2>

<p>
    @Html.ActionLink("Create New Product Decoration", "Create")
    @if(Request.Url.AbsolutePath.Contains("ArchivedIndex"))
    {
        <span class="float-right">@Html.ActionLink("View Active Product Decorations", "Index")</span>
    }
    else
    {
        <span class="float-right">@Html.ActionLink("View Archived Product Decorations", "ArchivedIndex")</span>
    }
</p>
<table class="index-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DecorationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecorationColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecorationLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecorationSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecorationVendor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DecorationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DecorationColor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DecorationLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DecorationSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DecorationVendor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DecorationID }) |
            @Html.ActionLink("Archive", "Archive", new { id=item.DecorationID })
        </td>
    </tr>
}

</table>
