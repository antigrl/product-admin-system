@model IEnumerable<NPR2._0._8.Models.PackagingType>

@{
    ViewBag.Title = "Packaging Type Index";
}

<h2>Packaging TypeIndex</h2>

<div class="left-half-content">
    <p>
        @Html.ActionLink("Create New Packaging Type", "Create")
    </p>
    <table class="index-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PackagingTypeName)
            </th>
            <th></th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PackagingTypeName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PackagingTypeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PackagingTypeID })
                </td>
            </tr>
        }

    </table>
</div>
