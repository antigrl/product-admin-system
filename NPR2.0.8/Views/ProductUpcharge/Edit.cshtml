@model NPR2._0._8.Models.ProductUpcharge
@using NPR2._0._8.Models
@using NPR2._0._8.Helpers

@{
    ViewBag.Title = "Edit Product Upcharge";
}

<h2>Edit Product Upcharge</h2>

@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <fieldset class="left-half-content">
        <legend>ProductUpcharge</legend>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.UpchargeName)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.UpchargeName, MyExtensions.GetGenericEnumDropDown<ProductUpchargeNames>(), "")
            @Html.ValidationMessageFor(model => model.UpchargeName)
        </div>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.UpchargeAmount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UpchargeAmount)
            @Html.ValidationMessageFor(model => model.UpchargeAmount)
        </div>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.UpchargeTotalCost)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UpchargeTotalCost)
            @Html.ValidationMessageFor(model => model.UpchargeTotalCost)
        </div>

        <div class="editor-label">
            @Html.LabelForRequired(model => model.ProductID, "Product")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ProductID", String.Empty)
            @Html.ValidationMessageFor(model => model.ProductID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </fieldset>
}

@section Scripts {
}
