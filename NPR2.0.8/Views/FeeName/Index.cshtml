@model IEnumerable<NPRModels.FeeName>

@{
    ViewBag.Title = "Fee Name Index";
}

<h2>Fee Name Index</h2>

<div class="left-half-content">
    <p>
        @Html.ActionLink("Create New Fee Name", "Create")
        @if(Request.Url.AbsolutePath.Contains("ArchivedIndex"))
        {
            <span class="float-right">@Html.ActionLink("View Active Fee Names", "Index")</span>
        }
        else
        {
            <span class="float-right">@Html.ActionLink("View Archived Fee Names", "ArchivedIndex")</span>
        }
    </p>
    <table class="index-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FeeNameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeeNameType)
            </th>
            <th></th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FeeNameName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeeNameType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.FeeNameID }) |
                    @Html.ActionLink("Archive", "Archive", new { id = item.FeeNameID })
                </td>
            </tr>
        }
    </table>
</div>
