@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
}
<div class="left-half-content">
    <h3>Basic Links</h3>
    <ol class="round">
        <li class="one">
            <h5>Company</h5>
            @Html.ActionLink("Company List", "Index", "Company")
        </li>

        <li class="two">
            <h5>Campaign</h5>
            @Html.ActionLink("Campaign List", "Index", "Campaign")
        </li>
    </ol>
</div>
<div class="right-half-content">
    <h3>Drop Down Lists</h3>
    <ol class="round">
        <li class="one">
            <h5>Vendor Names</h5>
            @Html.ActionLink("Vendor Name List", "Index", "VendorName")
        </li>
    </ol>
</div>